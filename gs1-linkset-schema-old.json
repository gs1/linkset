{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "@id": "https://ref.gs1.org/standards/resolver/linkset-schema",
    "title": "JSON schema for linksets as defined in RFC 9264 plus additional features in GS1-Conformant resolvers",
    "type": "object",
    "properties": {
        "linkset": {
            "description": "The linkset",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "anchor": {
                        "description": "The URL at the root of the linkset, a.k.a the link context",
                        "type": "string",
                        "format": "uri"
                    },
                    "itemDescription": {
                        "name": "Item description",
                        "description": "A description of the item. There are no restrictions on this so that, for example, it does not have to be a product's name",
                        "type": "string"
                    },
                    "patternProperties": {
                        "^https://(ref\\.)?gs1\\.org/voc/\\w+$": {
                            "title": "Link object schema",
                            "description": "The schema for each link relation type (linktype)",
                            "type": "object",
                            "properties": {
                                "href": {
                                    "name": "href",
                                    "description": "The target URL",
                                    "type": "string",
                                    "format": "uri"
                                },
                                "title": {
                                    "title": "title",
                                    "description": "A human-readable title for the link",
                                    "type": "string"
                                },
                                "hreflang": {
                                    "name": "hreflang",
                                    "description": "The human language(s) of the target resource",
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "pattern": "(^\\w{2}$)|(^\\w{2}-\\w{2}$)"
                                    }
                                },
                                "type": {
                                    "name": "Type",
                                    "description": "The content type (MIME type) of the target resource",
                                    "type": "string",
                                    "pattern": "\\w+/[-+.\\w]+"
                                },
                                "context": {
                                    "name": "Context",
                                    "description": "An additional descriptor for the link, typically a country or territory",
                                    "type": "string"
                                },
                                "required": [
                                    "href",
                                    "title"
                                ],
                                "additionalProperties": false
                            }
                        }
                    }
                },
                "required": [
                    "anchor"
                ]
            }
        }
    },
    "required": [
        "linkset"
    ],
    "additionalProperties": false
  }
  